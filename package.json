    "build:windows": "pnpm install ; npm link ; cd KLY_VirtualMachines/kly_evm ; pnpm run build:windows ; cd ../../ ; ./build_must_have_addons.bat",
    "test": "node tr.js",
    "postinstall": "node ./npm_scripts/script.js"
  },
  "bin": {
    "klyntar": "klyn74r.js"
  },
